<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.SearchPropertiesController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Search Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">

                <Label text="Search Properties" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <GridPane hgap="15" vgap="15">

                    <!-- City -->
                    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                        <Label text="City" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="cityField" promptText="e.g., Lahore, Karachi" style="-fx-padding: 10;"/>
                    </VBox>

                    <!-- Check-in Date -->
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                        <Label text="Check-in Date" style="-fx-font-weight: bold;"/>
                        <DatePicker fx:id="checkInDatePicker" promptText="Select date" style="-fx-padding: 8;"/>
                    </VBox>

                    <!-- Check-out Date -->
                    <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="5">
                        <Label text="Check-out Date" style="-fx-font-weight: bold;"/>
                        <DatePicker fx:id="checkOutDatePicker" promptText="Select date" style="-fx-padding: 8;"/>
                    </VBox>

                    <!-- Number of Guests -->
                    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
                        <Label text="Number of Guests" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="numGuestsField" promptText="e.g., 2" style="-fx-padding: 10;"/>
                    </VBox>

                    <!-- Min Price -->
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5">
                        <Label text="Min Price (PKR/night)" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="minPriceField" promptText="e.g., 5000" style="-fx-padding: 10;"/>
                    </VBox>

                    <!-- Max Price -->
                    <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" spacing="5">
                        <Label text="Max Price (PKR/night)" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="maxPriceField" promptText="e.g., 20000" style="-fx-padding: 10;"/>
                    </VBox>

                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Clear Filters"
                            onAction="#handleClearFilters"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    <Button text="Search"
                            onAction="#handleSearch"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                </HBox>

            </VBox>

            <!-- Results Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Search Results" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="resultsCountLabel" text="(0 properties found)" style="-fx-text-fill: #7f8c8d;"/>
                </HBox>

                <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Property Title" prefWidth="200"/>
                        <TableColumn fx:id="cityColumn" text="City" prefWidth="100"/>
                        <TableColumn fx:id="priceColumn" text="Price/Night (PKR)" prefWidth="120"/>
                        <TableColumn fx:id="guestsColumn" text="Max Guests" prefWidth="100"/>
                        <TableColumn fx:id="bedroomsColumn" text="Bedrooms" prefWidth="100"/>
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="150"/>
                    </columns>
                </TableView>

            </VBox>

        </VBox>
    </center>

</BorderPane>
