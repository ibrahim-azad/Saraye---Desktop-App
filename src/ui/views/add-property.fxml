<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.AddPropertyController"
            styleClass="root"
            stylesheets="@../../resources/css/style.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="150" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    styleClass="back-button"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <HBox alignment="CENTER" style="-fx-padding: 30;">
                <VBox spacing="20" style="-fx-max-width: 800;" alignment="TOP_CENTER">

                <!-- Page Title -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="ðŸ  Add New Property" styleClass="page-title"/>
                    <Label text="Fill in the details below to list your property" styleClass="subtitle"/>
                </VBox>

                <!-- Basic Information -->
                <VBox spacing="15" styleClass="content-card">
                    <Label text="â„¹ï¸ Basic Information" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>

                    <!-- Title -->
                    <VBox spacing="5">
                        <Label text="Property Title *" styleClass="label-bold"/>
                        <TextField fx:id="titleField"
                                  promptText="e.g., Luxury Apartment in DHA"
                                  style="-fx-padding: 10;"/>
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="5">
                        <Label text="Description *" styleClass="label-bold"/>
                        <TextArea fx:id="descriptionArea"
                                 promptText="Describe your property in detail..."
                                 wrapText="true"
                                 prefRowCount="4"
                                 style="-fx-padding: 10;"/>
                    </VBox>

                </VBox>

                <!-- Location -->
                <VBox spacing="15" styleClass="content-card">
                    <Label text="ðŸ“ Location" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>

                    <GridPane hgap="15" vgap="15">
                        <!-- Address -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                            <Label text="Address *" styleClass="label-bold"/>
                            <TextField fx:id="addressField"
                                      promptText="e.g., DHA Phase 5"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- City -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                            <Label text="City *" styleClass="label-bold"/>
                            <TextField fx:id="cityField"
                                      promptText="e.g., Lahore"
                                      style="-fx-padding: 10;"/>
                        </VBox>
                    </GridPane>

                </VBox>

                <!-- Property Details -->
                <VBox spacing="15" styleClass="content-card">
                    <Label text="ðŸ’Ž Property Details" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>

                    <GridPane hgap="15" vgap="15">
                        <!-- Price per Night -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                            <Label text="Price per Night (PKR) *" styleClass="label-bold"/>
                            <TextField fx:id="priceField"
                                      promptText="e.g., 15000"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Max Guests -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                            <Label text="Maximum Guests *" styleClass="label-bold"/>
                            <TextField fx:id="maxGuestsField"
                                      promptText="e.g., 6"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Bedrooms -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
                            <Label text="Number of Bedrooms *" styleClass="label-bold"/>
                            <TextField fx:id="bedroomsField"
                                      promptText="e.g., 3"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Bathrooms -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5">
                            <Label text="Number of Bathrooms *" styleClass="label-bold"/>
                            <TextField fx:id="bathroomsField"
                                      promptText="e.g., 2"
                                      style="-fx-padding: 10;"/>
                        </VBox>
                    </GridPane>

                </VBox>

                <!-- Amenities -->
                <VBox spacing="15" styleClass="content-card">
                    <Label text="âœ¨ Amenities" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Select available amenities:" styleClass="subtitle"/>
                    
                    <!-- Amenities will be loaded dynamically as checkboxes -->
                    <VBox fx:id="amenitiesContainer" spacing="8" style="-fx-padding: 10;"/>
                </VBox>

                <!-- Submit Buttons -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button text="Cancel"
                            onAction="#handleBack"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                    <Button text="ðŸ  Add Property"
                            onAction="#handleAddProperty"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                </HBox>

                <!-- Required Fields Note -->
                <Label text="* Required fields"
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-font-style: italic;"/>

            </VBox>
            </HBox>
        </ScrollPane>
    </center>

</BorderPane>
