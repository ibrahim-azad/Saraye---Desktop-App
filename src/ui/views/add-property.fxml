<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.AddPropertyController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20; -fx-max-width: 800; -fx-alignment: center;">

                <!-- Page Title -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Add New Property" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Fill in the details below to list your property" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                </VBox>

                <!-- Basic Information -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Basic Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <!-- Title -->
                    <VBox spacing="5">
                        <Label text="Property Title *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="titleField"
                                  promptText="e.g., Luxury Apartment in DHA"
                                  style="-fx-padding: 10;"/>
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="5">
                        <Label text="Description *" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="descriptionArea"
                                 promptText="Describe your property in detail..."
                                 wrapText="true"
                                 prefRowCount="4"
                                 style="-fx-padding: 10;"/>
                    </VBox>

                </VBox>

                <!-- Location -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Location" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="15" vgap="15">
                        <!-- Address -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                            <Label text="Address *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="addressField"
                                      promptText="e.g., DHA Phase 5"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- City -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                            <Label text="City *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="cityField"
                                      promptText="e.g., Lahore"
                                      style="-fx-padding: 10;"/>
                        </VBox>
                    </GridPane>

                </VBox>

                <!-- Property Details -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Property Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="15" vgap="15">
                        <!-- Price per Night -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                            <Label text="Price per Night (PKR) *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="priceField"
                                      promptText="e.g., 15000"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Max Guests -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                            <Label text="Maximum Guests *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="maxGuestsField"
                                      promptText="e.g., 6"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Bedrooms -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
                            <Label text="Number of Bedrooms *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="bedroomsField"
                                      promptText="e.g., 3"
                                      style="-fx-padding: 10;"/>
                        </VBox>

                        <!-- Bathrooms -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5">
                            <Label text="Number of Bathrooms *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="bathroomsField"
                                      promptText="e.g., 2"
                                      style="-fx-padding: 10;"/>
                        </VBox>
                    </GridPane>

                </VBox>

                <!-- Amenities -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Amenities" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <VBox spacing="5">
                        <Label text="List amenities (comma-separated) *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="amenitiesField"
                                  promptText="e.g., WiFi, AC, Parking, Pool, Gym"
                                  style="-fx-padding: 10;"/>
                    </VBox>

                </VBox>

                <!-- Submit Buttons -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button text="Cancel"
                            onAction="#handleBack"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                    <Button text="ðŸ  Add Property"
                            onAction="#handleAddProperty"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                </HBox>

                <!-- Required Fields Note -->
                <Label text="* Required fields"
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-font-style: italic;"/>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
