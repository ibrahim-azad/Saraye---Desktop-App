<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="ui.controllers.RegisterController"
           stylesheets="@../../resources/css/style.css">

    <!-- Background Image -->
    <ImageView fitWidth="1280" fitHeight="720" preserveRatio="false">
        <image>
            <Image url="/resources/images/sarayebackground.jpg"/>
        </image>
    </ImageView>

    <!-- Semi-transparent overlay -->
    <StackPane style="-fx-background-color: rgba(245, 241, 232, 0.85);"/>

    <!-- Content -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">

            <!-- Logo/Title Section -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitWidth="200" fitHeight="80" preserveRatio="true">
                    <image>
                        <Image url="/resources/images/sarayebanner.png"/>
                    </image>
                </ImageView>
                <Label text="Property Rental Platform" styleClass="subtitle"/>
    </VBox>

    <!-- Register Form Card -->
    <VBox spacing="15" maxWidth="450" styleClass="content-card">

        <Label text="ðŸ’Ž Create Your Account" styleClass="section-title">
            <font>
                <Font name="Poppins" size="24.0"/>
            </font>
        </Label>

        <Label text="Join Saraye today" styleClass="subtitle"/>

        <!-- Name Field -->
        <VBox spacing="5">
            <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="nameField"
                       promptText="Enter your full name"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Phone Field -->
        <VBox spacing="5">
            <Label text="Phone Number" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="phoneField"
                       promptText="Enter your phone number"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="passwordField"
                          promptText="Create a password (min 6 characters)"
                          style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Confirm Password Field -->
        <VBox spacing="5">
            <Label text="Confirm Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="confirmPasswordField"
                          promptText="Re-enter your password"
                          style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Role Selection -->
        <VBox spacing="5">
            <Label text="I want to..." style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ComboBox fx:id="roleComboBox"
                     promptText="Select your role"
                     maxWidth="Infinity"
                     style="-fx-padding: 8;"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
               style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: #fadbd8; -fx-background-radius: 5;"/>

        <!-- Register Button -->
        <Button text="Create Account"
                onAction="#handleRegister"
                maxWidth="Infinity"
                styleClass="button-primary">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>

        <!-- Login Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Login here"
                      onAction="#handleLoginLink"
                      style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

    <!-- Footer -->
    <Label text="Â© 2025 Saraye - By Cactus Team" style="-fx-text-fill: #8B7355; -fx-font-size: 12px;">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Label>

        </VBox>
    </ScrollPane>

</StackPane>
