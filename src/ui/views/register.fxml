<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controllers.RegisterController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 40;">

    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="SARAYE" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="48.0"/>
            </font>
        </Label>
        <Label text="Property Rental Platform" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Register Form Card -->
    <VBox spacing="15" maxWidth="450" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <Label text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Label text="Join Saraye today" style="-fx-font-size: 14px; -fx-text-fill: #95a5a6;"/>

        <!-- Name Field -->
        <VBox spacing="5">
            <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="nameField"
                       promptText="Enter your full name"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Phone Field -->
        <VBox spacing="5">
            <Label text="Phone Number" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="phoneField"
                       promptText="Enter your phone number"
                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="passwordField"
                          promptText="Create a password (min 6 characters)"
                          style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Confirm Password Field -->
        <VBox spacing="5">
            <Label text="Confirm Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="confirmPasswordField"
                          promptText="Re-enter your password"
                          style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Role Selection -->
        <VBox spacing="5">
            <Label text="I want to..." style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ComboBox fx:id="roleComboBox"
                     promptText="Select your role"
                     maxWidth="Infinity"
                     style="-fx-padding: 8;"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
               style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: #fadbd8; -fx-background-radius: 5;"/>

        <!-- Register Button -->
        <Button text="Create Account"
                onAction="#handleRegister"
                maxWidth="Infinity"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 14; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>

        <!-- Login Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Login here"
                      onAction="#handleLoginLink"
                      style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

    <!-- Footer -->
    <Label text="Â© 2025 Saraye - By Cactus Team" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </Label>

</VBox>
