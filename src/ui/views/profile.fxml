<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.ProfileController"
            styleClass="root"
            stylesheets="@../../resources/css/style.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="150" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    styleClass="back-button"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5; -fx-background: #f5f5f5;">
            <HBox alignment="CENTER" style="-fx-padding: 40;">
                <VBox spacing="20" style="-fx-max-width: 600; -fx-alignment: center;">

                <!-- Page Title -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="My Profile" styleClass="page-title"/>
                <Label text="View and manage your account information" styleClass="subtitle"/>
            </VBox>

            <!-- Profile Information Card -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

                <!-- Name -->
                <VBox spacing="5">
                    <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <TextField fx:id="nameField"
                              editable="false"
                              style="-fx-padding: 12; -fx-background-color: #ecf0f1; -fx-font-size: 16px;"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5">
                    <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <TextField fx:id="emailField"
                              editable="false"
                              style="-fx-padding: 12; -fx-background-color: #ecf0f1; -fx-font-size: 16px;"/>
                </VBox>

                <!-- Phone -->
                <VBox spacing="5">
                    <Label text="Phone Number" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <TextField fx:id="phoneField"
                              editable="false"
                              style="-fx-padding: 12; -fx-background-color: #ecf0f1; -fx-font-size: 16px;"/>
                </VBox>

                <!-- Role -->
                <VBox spacing="5">
                    <Label text="Account Type" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <TextField fx:id="roleField"
                              editable="false"
                              style="-fx-padding: 12; -fx-background-color: #ecf0f1; -fx-font-size: 16px;"/>
                </VBox>

                <Separator/>

                <!-- Account Stats -->
                <VBox spacing="15">
                    <Label text="Account Statistics" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="20" vgap="15" alignment="CENTER">
                        <!-- Member Since -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5" alignment="CENTER">
                            <Label text="ðŸ“…" style="-fx-font-size: 32px;"/>
                            <Label text="Member Since" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                            <Label fx:id="memberSinceLabel" text="Nov 2025" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        </VBox>

                        <!-- Total Bookings (for guests) / Properties (for hosts) -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5" alignment="CENTER">
                            <Label fx:id="statsIconLabel" text="ðŸ“Š" style="-fx-font-size: 32px;"/>
                            <Label fx:id="statsTypeLabel" text="Total Bookings" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                            <Label fx:id="statsValueLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        </VBox>
                    </GridPane>
                </VBox>

            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                <Button text="ðŸ”’ Change Password"
                        onAction="#handleChangePassword"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                <Button text="âœï¸ Edit Profile"
                        onAction="#handleEditProfile"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size: 14px; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Edit Action Buttons (Initially Hidden) -->
            <HBox fx:id="editButtonsBox" alignment="CENTER" spacing="15" style="-fx-padding: 10;" visible="false" managed="false">
                <Button text="ðŸ’¾ Save Changes"
                        onAction="#handleSaveChanges"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                <Button text="âŒ Cancel"
                        onAction="#handleCancelEdit"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size: 14px; -fx-background-radius: 5;"/>
            </HBox>

                </VBox>
            </HBox>
        </ScrollPane>
    </center>

</BorderPane>
