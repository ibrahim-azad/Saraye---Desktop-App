                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Label>
                <Label text="Find your perfect property rental" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Action Cards -->
            <GridPane hgap="20" vgap="20" alignment="CENTER">

                <!-- Search Properties Card -->
