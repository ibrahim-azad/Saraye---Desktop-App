                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Update your account information"
                           wrapText="true"
                           textAlignment="CENTER"
                           style="-fx-text-fill: #7f8c8d;"/>
                    <Button text="View Profile"
                            onAction="#handleViewProfile"
                            maxWidth="Infinity"
                            style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                </VBox>

                <!-- Become a Host Card -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1"
                      spacing="15"
                      alignment="CENTER"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
