<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.GuestDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="welcomeLabel" text="Welcome, Guest!" style="-fx-text-fill: white; -fx-font-size: 16px;"/>

            <Button text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

