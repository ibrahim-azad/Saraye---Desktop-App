<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.GuestDashboardController"
            styleClass="root"
            stylesheets="@../../resources/css/style.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="150" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="welcomeLabel" text="Welcome, Guest!" style="-fx-text-fill: white; -fx-font-size: 16px;"/>

            <Button text="My Profile"
                    onAction="#handleViewProfile"
                    styleClass="back-button"/>

            <Button text="Logout"
                    onAction="#handleLogout"
                    styleClass="button-danger"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">

            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Guest Dashboard" styleClass="page-title">
                    <font>
                        <Font name="Poppins" size="32.0"/>
                    </font>
                </Label>
                <Label text="Find your perfect property rental" styleClass="subtitle"/>
            </VBox>

            <!-- Action Cards -->
            <GridPane hgap="20" vgap="20" alignment="CENTER">

                <!-- Search Properties Card -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0"
                      spacing="15"
                      alignment="CENTER"
                      styleClass="content-card"
                      minWidth="250" minHeight="200">

                    <Label text="ðŸ” Search Properties" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Browse available properties in your area"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="subtitle"/>
                    <Button text="Search Now"
                            onAction="#handleSearchProperties"
                            maxWidth="Infinity"
                            styleClass="button-primary"/>
                </VBox>

                <!-- My Bookings Card -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                      spacing="15"
                      alignment="CENTER"
                      styleClass="content-card"
                      minWidth="250" minHeight="200">

                    <Label text="ðŸ“… My Bookings" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="View and manage your reservations"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="subtitle"/>
                    <Button text="View Bookings"
                            onAction="#handleMyBookings"
                            maxWidth="Infinity"
                            styleClass="button-secondary"/>
                </VBox>

                <!-- My Profile Card -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1"
                      spacing="15"
                      alignment="CENTER"
                      styleClass="content-card"
                      minWidth="250" minHeight="200">

                    <Label text="My Profile" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Update your account information"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="subtitle"/>
                    <Button text="View Profile"
                            onAction="#handleViewProfile"
                            maxWidth="Infinity"
                            styleClass="button-accent"/>
                </VBox>

                <!-- Become a Host Card -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1"
                      spacing="15"
                      alignment="CENTER"
                      styleClass="content-card"
                      minWidth="250" minHeight="200">

                    <Label text="ðŸ  Become a Host" styleClass="subsection-title">
                        <font>
                            <Font name="Poppins" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="List your property and earn income"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="subtitle"/>
                    <Button text="Start Hosting"
                            onAction="#handleBecomeHost"
                            maxWidth="Infinity"
                            styleClass="button-warning"/>
                </VBox>

            </GridPane>

        </VBox>
    </center>

    <!-- Bottom Bar -->
    <bottom>
        <HBox style="-fx-background-color: linear-gradient(to right, #8B6F47, #A0826D); -fx-padding: 10;" alignment="CENTER">
            <Label text="Â© 2025 Saraye - Property Rental Platform" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
