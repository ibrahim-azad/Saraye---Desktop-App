<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="ui.controllers.LoginController"
           stylesheets="@../../resources/css/style.css">

    <!-- Background Image -->
    <ImageView fitWidth="1280" fitHeight="720" preserveRatio="false">
        <image>
            <Image url="/resources/images/sarayebackground.jpg"/>
        </image>
    </ImageView>

    <!-- Semi-transparent overlay -->
    <StackPane style="-fx-background-color: rgba(245, 241, 232, 0.85);"/>

    <!-- Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">

        <!-- Logo/Title Section -->
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitWidth="200" fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>
            <Label text="Property Rental Platform" styleClass="subtitle"/>
    </VBox>

    <!-- Login Form Card -->
    <VBox spacing="20" maxWidth="400" styleClass="content-card">

        <Label text="ðŸ’Ž Welcome Back!" styleClass="section-title">
            <font>
                <Font name="Poppins" size="24.0"/>
            </font>
        </Label>

        <Label text="Sign in to continue" styleClass="subtitle"/>

        <!-- Email Field -->
        <VBox spacing="8">
            <Label text="ðŸ‘¤ Email Address" styleClass="label-bold"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       styleClass="text-field"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="8">
            <Label text="ðŸ”’ Password" styleClass="label-bold"/>
            <PasswordField fx:id="passwordField"
                          promptText="Enter your password"
                          styleClass="password-field"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
               styleClass="error-box"/>

        <!-- Login Button -->
        <Button text="Login"
                onAction="#handleLogin"
                maxWidth="Infinity"
                styleClass="button-primary">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>

        <!-- Divider -->
        <HBox alignment="CENTER" spacing="10">
            <Separator HBox.hgrow="ALWAYS"/>
            <Label text="OR" style="-fx-text-fill: #95a5a6;"/>
            <Separator HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Register Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Register here"
                      onAction="#handleRegisterLink"
                      style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

        <!-- Footer -->
        <Label text="Â© 2025 Saraye - By Cactus Team" style="-fx-text-fill: #8B7355; -fx-font-size: 12px;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Label>

    </VBox>

</StackPane>
