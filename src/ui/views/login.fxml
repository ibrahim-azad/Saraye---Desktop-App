<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controllers.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 40;">

    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="SARAYE" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="48.0"/>
            </font>
        </Label>
        <Label text="Property Rental Platform" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Login Form Card -->
    <VBox spacing="20" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <Label text="Welcome Back!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Label text="Sign in to continue" style="-fx-font-size: 14px; -fx-text-fill: #95a5a6;"/>

        <!-- Email Field -->
        <VBox spacing="8">
            <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="8">
            <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="passwordField"
                          promptText="Enter your password"
                          style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
               style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: #fadbd8; -fx-background-radius: 5;"/>

        <!-- Login Button -->
        <Button text="Login"
                onAction="#handleLogin"
                maxWidth="Infinity"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 14; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>

        <!-- Divider -->
        <HBox alignment="CENTER" spacing="10">
            <Separator HBox.hgrow="ALWAYS"/>
            <Label text="OR" style="-fx-text-fill: #95a5a6;"/>
            <Separator HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Register Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Register here"
                      onAction="#handleRegisterLink"
                      style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>

    <!-- Footer -->
    <Label text="Â© 2025 Saraye - By Cactus Team" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </Label>

</VBox>
