                        <font>
                            <Font name="System Bold" size="36.0"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Total Properties -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                      spacing="10"
                      alignment="CENTER"
                      styleClass="content-card"
                      minWidth="220" minHeight="150">
