<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.HostBookingsController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Header Section -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Booking Requests" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Filter Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filter by Status:" style="-fx-font-weight: bold;"/>
                    <Button text="All"
                            onAction="#handleShowAll"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 5;"/>
                    <Button text="Pending"
                            onAction="#handleShowPending"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 5;"/>
                    <Button text="Approved"
                            onAction="#handleShowApproved"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 5;"/>
                    <Button text="Declined"
                            onAction="#handleShowDeclined"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 5;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="statusLabel" text="Showing: All Bookings" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="countLabel" text="(0 bookings)" style="-fx-text-fill: #95a5a6;"/>
                </HBox>
            </VBox>

            <!-- Bookings Table -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">

                <TableView fx:id="bookingsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="120"/>
                        <TableColumn fx:id="propertyColumn" text="Property" prefWidth="150"/>
                        <TableColumn fx:id="checkInColumn" text="Check-in" prefWidth="100"/>
                        <TableColumn fx:id="checkOutColumn" text="Check-out" prefWidth="100"/>
                        <TableColumn fx:id="guestsColumn" text="Guests" prefWidth="70"/>
                        <TableColumn fx:id="totalPriceColumn" text="Total (PKR)" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                    </columns>
                </TableView>

            </VBox>

        </VBox>
    </center>

</BorderPane>
