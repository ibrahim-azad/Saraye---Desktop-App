<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.HostPropertiesController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Header -->
            <VBox spacing="10">
                <Label text="My Properties" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Manage your property listings" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Filter Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="All Properties" onAction="#handleShowAll"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                <Button text="Available" onAction="#handleShowAvailable"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                <Button text="Unavailable" onAction="#handleShowUnavailable"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Add New Property" onAction="#handleAddProperty"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Status Info -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5;">
                <Label fx:id="statusLabel" text="Showing: All Properties" style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                <Label fx:id="countLabel" text="(0 properties)" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </HBox>

            <!-- Properties Table -->
            <TableView fx:id="propertiesTable" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Property Title" prefWidth="200"/>
                    <TableColumn fx:id="cityColumn" text="City" prefWidth="120"/>
                    <TableColumn fx:id="priceColumn" text="Price/Night" prefWidth="100"/>
                    <TableColumn fx:id="bedroomsColumn" text="Bedrooms" prefWidth="80"/>
                    <TableColumn fx:id="maxGuestsColumn" text="Max Guests" prefWidth="90"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
