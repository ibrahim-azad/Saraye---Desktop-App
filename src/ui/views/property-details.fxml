<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.PropertyDetailsController"
            styleClass="root"
            stylesheets="@../../resources/css/style.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="150" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Search"
                    onAction="#handleBack"
                    styleClass="back-button"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Property Title Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label fx:id="titleLabel" text="Property Title" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                        <Label fx:id="addressLabel" text="Address, City" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>

                <!-- Image Placeholder -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Property Images" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 60; -fx-alignment: center; -fx-background-radius: 5;">
                        <VBox spacing="10" alignment="CENTER">
                            <Label text="ðŸ " style="-fx-font-size: 64px;"/>
                            <Label text="Property Images" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            <Label text="(To be loaded from database)" style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Property Details Grid -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Property Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="20" vgap="15">
                        <!-- Price -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                            <Label text="Price per Night" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="PKR" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="priceLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                            </HBox>
                        </VBox>

                        <!-- Max Guests -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                            <Label text="Maximum Guests" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="ðŸ‘¥" style="-fx-font-size: 20px;"/>
                                <Label fx:id="guestsLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="guests" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </HBox>
                        </VBox>

                        <!-- Bedrooms -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
                            <Label text="Bedrooms" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="ðŸ›ï¸" style="-fx-font-size: 20px;"/>
                                <Label fx:id="bedroomsLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="bedrooms" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </HBox>
                        </VBox>

                        <!-- Bathrooms -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5">
                            <Label text="Bathrooms" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="ðŸš¿" style="-fx-font-size: 20px;"/>
                                <Label fx:id="bathroomsLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="bathrooms" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            </HBox>
                        </VBox>
                    </GridPane>
                </VBox>

                <!-- Description Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Description" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="descriptionLabel" text="Property description will appear here..."
                           wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-line-spacing: 5;"/>
                </VBox>

                <!-- Amenities Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label text="Amenities" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="amenitiesLabel" text="WiFi, AC, Parking"
                           wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>
                </VBox>

                <!-- Reviews Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Guest Reviews" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="averageRatingLabel" text="â­ 0.0" style="-fx-font-size: 16px; -fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
                        <Label fx:id="reviewCountLabel" text="(0 reviews)" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    
                    <!-- Reviews List Container -->
                    <VBox fx:id="reviewsContainer" spacing="10" style="-fx-padding: 10 0;">
                        <Label text="No reviews yet" style="-fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
                    </VBox>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button text="ðŸ“… Book This Property"
                            onAction="#handleBookNow"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15 40; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
                    <Button text="âš ï¸ Report Property"
                            onAction="#handleReportProperty"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 15 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
