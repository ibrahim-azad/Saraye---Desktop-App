<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.LeaveReviewController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="SARAYE" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="← Back"
                    onAction="#handleBack"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 40; -fx-max-width: 700; -fx-alignment: center;">

                <!-- Page Title -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="⭐" style="-fx-font-size: 64px;"/>
                    <Label text="Leave a Review" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Share your experience with this property" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                </VBox>

                <!-- Booking Information Card -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label text="Booking Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    
                    <HBox spacing="10">
                        <Label text="Property:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
                        <Label fx:id="propertyNameLabel" text="Property Name" style="-fx-text-fill: #34495e;"/>
                    </HBox>
                    
                    <HBox spacing="10">
                        <Label text="Booking ID:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
                        <Label fx:id="bookingIdLabel" text="B001" style="-fx-text-fill: #34495e;"/>
                    </HBox>
                    
                    <HBox spacing="10">
                        <Label text="Stay Period:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
                        <Label fx:id="stayPeriodLabel" text="Jan 1 - Jan 5, 2025" style="-fx-text-fill: #34495e;"/>
                    </HBox>
                </VBox>

                <!-- Rating Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label text="Rating *" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="How would you rate your overall experience?" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
                    
                    <!-- Star Rating Buttons -->
                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0;">
                        <Button fx:id="star1" text="⭐" onAction="#handleRating1"
                                style="-fx-font-size: 40px; -fx-background-color: transparent; -fx-cursor: hand;"/>
                        <Button fx:id="star2" text="⭐" onAction="#handleRating2"
                                style="-fx-font-size: 40px; -fx-background-color: transparent; -fx-cursor: hand;"/>
                        <Button fx:id="star3" text="⭐" onAction="#handleRating3"
                                style="-fx-font-size: 40px; -fx-background-color: transparent; -fx-cursor: hand;"/>
                        <Button fx:id="star4" text="⭐" onAction="#handleRating4"
                                style="-fx-font-size: 40px; -fx-background-color: transparent; -fx-cursor: hand;"/>
                        <Button fx:id="star5" text="⭐" onAction="#handleRating5"
                                style="-fx-font-size: 40px; -fx-background-color: transparent; -fx-cursor: hand;"/>
                    </HBox>
                    
                    <Label fx:id="ratingLabel" text="Select a rating" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-alignment: center;"
                           alignment="CENTER"/>
                </VBox>

                <!-- Review Comment -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label text="Your Review *" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Tell us about your experience (minimum 20 characters)" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
                    
                    <TextArea fx:id="reviewTextArea"
                             promptText="Share details about your stay, the property, amenities, host responsiveness, etc."
                             wrapText="true"
                             prefRowCount="6"
                             style="-fx-padding: 12; -fx-font-size: 14px;"/>
                </VBox>

                <!-- Submit Button -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button text="Cancel"
                            onAction="#handleBack"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                    <Button text="✓ Submit Review"
                            onAction="#handleSubmitReview"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
