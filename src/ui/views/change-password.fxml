<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.ChangePasswordController"
            styleClass="root"
            stylesheets="@../../resources/css/style.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="150" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="/resources/images/sarayebanner.png"/>
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="â† Back to Profile"
                    onAction="#handleBack"
                    styleClass="back-button"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <HBox alignment="CENTER" style="-fx-padding: 40;">
            <VBox spacing="30" style="-fx-max-width: 600;">

                <!-- Page Title -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="ðŸ”‘ Change Password" styleClass="page-title"/>
                    <Label text="Update your account password securely" styleClass="subtitle"/>
                </VBox>

                <!-- Password Change Form -->
                <VBox spacing="25" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10;">

                    <!-- Current Password -->
                    <VBox spacing="8">
                        <Label text="ðŸ”’ Current Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                        <PasswordField fx:id="currentPasswordField"
                                      promptText="Enter your current password"
                                      style="-fx-padding: 12; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                        <Label text="We need to verify your identity before changing your password" 
                               style="-fx-font-size: 11px; -fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
                    </VBox>

                    <Separator/>

                    <!-- New Password -->
                    <VBox spacing="8">
                        <Label text="ðŸ”’ New Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                        <PasswordField fx:id="newPasswordField"
                                      promptText="Enter your new password"
                                      style="-fx-padding: 12; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                        <Label text="Password must be at least 6 characters long" 
                               style="-fx-font-size: 11px; -fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
                    </VBox>

                    <!-- Confirm New Password -->
                    <VBox spacing="8">
                        <Label text="ðŸ”’ Confirm New Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                        <PasswordField fx:id="confirmPasswordField"
                                      promptText="Re-enter your new password"
                                      style="-fx-padding: 12; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                        <Label text="Please type the new password again to confirm" 
                               style="-fx-font-size: 11px; -fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
                    </VBox>

                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button text="âŒ Cancel"
                            onAction="#handleCancel"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                    <Button text="ðŸ”’ Change Password"
                            onAction="#handleChangePassword"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                </HBox>

                <!-- Security Tips -->
                <VBox spacing="10" style="-fx-background-color: #e8f4f8; -fx-padding: 20; -fx-background-radius: 8;">
                    <Label text="ðŸ’¡ Security Tips" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                    <Label text="â€¢ Use a strong password with letters, numbers, and symbols" 
                           wrapText="true"
                           style="-fx-font-size: 12px; -fx-text-fill: #34495e;"/>
                    <Label text="â€¢ Don't reuse passwords from other accounts" 
                           wrapText="true"
                           style="-fx-font-size: 12px; -fx-text-fill: #34495e;"/>
                    <Label text="â€¢ Change your password regularly for better security" 
                           wrapText="true"
                           style="-fx-font-size: 12px; -fx-text-fill: #34495e;"/>
                </VBox>

            </VBox>
            </HBox>
        </ScrollPane>
    </center>

</BorderPane>
